<!-- Contact content-area -->
<section class="condition-content-wrap">
  <div class="container-max">
    <div class="row gap-x-40">
      <div class="col-lg-6">
        <div class="condition-left-col">
          <h2>{{ section.settings.contact_heading }}</h2>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="condition-right-col">
          <h4 class="font-base">{{ section.settings.article_title }}</h4>
          <div class="content">
            <div>
              <p>{{ section.settings.article_description_top }}</p>
            </div>
            {{ section.settings.article_richtext }}
          </div>

          <div class="contact-form-wrap">
            {% form 'contact' %}
              {% if form.posted_successfully? %}
                <p class="form-success">{{ section.settings.success_msg }}</p>
              {% endif %}

              {% if form.errors %}
                <ul class="form-errors">
                  {% for message in form.errors %}
                    <li>{{ message }}</li>
                  {% endfor %}
                </ul>
              {% endif %}

              <div class="single-input-fuild">
                <input
                  type="text"
                  name="contact[name]"
                  placeholder="Name"
                  value="{{ form.name }}"
                  required>
              </div>
              <div class="single-input-fuild">
                <input
                  type="email"
                  name="contact[email]"
                  placeholder="Email address"
                  value="{{ form.email }}"
                  required>
              </div>
              <div class="single-input-fuild textarea-wrapper">
                <textarea
                  name="contact[body]"
                  placeholder="What can we help you with?*"
                  required>{{ form.body }}</textarea>
              </div>
              <div class="contact-submit__btn">
                <button class="btn-borderd" type="submit">
                  <span>Submit</span>
                  <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M7.224 1.27201L12 6.02401L7.224 10.8H5.64L9.96 6.57601H0V5.42401H9.96L5.64 1.20001H7.224V1.27201Z" fill="white" />
                  </svg>
                </button>
              </div>
            {% endform %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Contact content-area -->


{% schema %}
{
  "name": "Contact Page Section",
  "settings": [
    {
      "type": "text",
      "id": "contact_heading",
      "label": "Contact Heading",
      "default": "Contact Us"
    },
    {
      "type": "text",
      "id": "article_title",
      "label": "Article Title",
      "default": "Article 1"
    },
    {
      "type": "textarea",
      "id": "article_description_top",
      "label": "Top Description",
      "default": "Made in Nijmegen, the Netherlands — where precision grooming meets European craftsmanship. Designed for men, our products combine clean formulas with high-performance results you can trust."
    },
    {
      "type": "richtext",
      "id": "article_richtext",
      "label": "List + Extra Description",
      "default": "<ul><li><h5>Invisible coverage</h5> Our natural pigments adapt to your skintone, so that no one will notice you’re wearing something.</li><li><h5>Designed for men’s skin</h5> We’ve crafted the concealing gel with the men in mind. We offer lightweight gel.</li><li><h5>Easy application</h5> Super easy to use with your hands and finished within 10 seconds.</li></ul><p>Designed for men, our products combine clean formulas with high-performance results you can trust. Made in Nijmegen, the Netherlands — where precision grooming meets European craftsmanship. Designed for men, our products combine clean formulas with high-performance results you can trust.</p>"
    },
    {
      "type": "text",
      "id": "success_msg",
      "label": "Form Success Message",
      "default": "Thank you! We’ve received your message and will get back to you soon."
    },
    {
      "type": "text",
      "id": "error_msg",
      "label": "Form Error Message",
      "default": "Oops! Something went wrong. Please try again."
    }
  ],
  "presets": [
    {
      "name": "Contact Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
