<!-- discover-cetagory-area -->
<div class="discover-cetagory-area section-spacer">
  <div class="container-max">
    <div class="inner-spacer pt-0">
      <h2 class="secondary-heading">{{ section.settings.heading }}</h2>
    </div>
  </div>

  <div class="discover-grid-wrapper">
    {% for block in section.blocks %}
      <div class="discover-single-cetagory{% if block.settings.transparent_border %} border-transparent{% endif %}" {{ block.shopify_attributes }}>
        <a href="{{ block.settings.link }}" class="d-block w-100">
          <div class="d-signle-cetagory-img">
            {% if block.settings.image_desktop %}
              <img class="d-none d-lg-block" src="{{ block.settings.image_desktop | image_url: width: 600 }}" alt="{{ block.settings.label }}" width="auto" height="auto">
            {% endif %}
            {% if block.settings.image_mobile %}
              <img class="d-lg-none" src="{{ block.settings.image_mobile | image_url: width: 400 }}" alt="{{ block.settings.label }}" width="auto" height="auto">
            {% endif %}
          </div>
          <div class="content">
            <p class="font-small">{{ block.settings.label }}</p>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "New Discover Category",
  "class": "discover-category-section",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Discover Category Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "discover by category"
    }
  ],
  "blocks": [
    {
      "type": "category_item",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Grooming+"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link"
        },
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image"
        },
        {
          "type": "checkbox",
          "id": "transparent_border",
          "label": "Make Border Transparent",
          "default": false
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "New Discover Category",
      "category": "Custom",
      "blocks": [
        {
          "type": "category_item"
        },
        {
          "type": "category_item"
        },
        {
          "type": "category_item",
          "settings": {
            "transparent_border": true
          }
        }
      ]
    }
  ]
}
{% endschema %}
