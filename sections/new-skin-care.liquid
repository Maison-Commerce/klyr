<style>

</style>

<div class="skincare-range-wrap section-spacer" id="{{ section.id }}">
  <div class="large-space-right">
    <div class="skincare-range__grid">
      <div class="skincare-range__left">
        <div class="sr-left-img">
          {% if section.settings.image %}
            <img src="{{ section.settings.image | image_url: width: 1200 }}" alt="{{ section.settings.heading | escape }}" width="auto" height="auto">
          {% endif %}
        </div>
      </div>
      <div class="skincare-range__right">
        <div class="sr-right-content">
          <div>
            <p class="uppercase font-small">{{ section.settings.label }}</p>
            <h2 class="secondary-heading pt-3">{{ section.settings.heading }}</h2>
          </div>
          <p>{{ section.settings.description }}</p>
          <div class="skincare-range__btn-wrapper">
            {% if section.settings.button_label != blank and section.settings.button_link != blank %}
              <a href="{{ section.settings.button_link }}" class="btn-borderd">
                <span>{{ section.settings.button_label }}</span>
                <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M7.224 1.27195L12 6.02395L7.224 10.8H5.64L9.96 6.57595H0V5.42395H9.96L5.64 1.19995H7.224V1.27195Z"
                    fill="#231C19" />
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "New Skincare Range",
  "class": "skincare-range-section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Image"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Small Label (Uppercase)",
      "default": "skincare+"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "a range of care for skin"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Timeless gift options including celebrated staples of skin, hand and body care, as well as fragrant delights for the home..."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "discover care+"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "New Skincare Range",
      "category": "Custom"
    }
  ]
}
{% endschema %}
