<style>

</style>

<div class="product-feature-wrap section-spacer" id="{{ section.id }}">
  <div class="container-max">
    <div class="product-feature__grid">
      {% for block in section.blocks %}
        <div class="product-feature-single" {{ block.shopify_attributes }}>
          <h4 class="product-feature__title">{{ block.settings.title }}</h4>
          <p class="product-feature__text">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "New Multicolumn",
  "class": "product-feature-section",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Product Feature Settings"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Feature Description",
          "default": "Feature description text here..."
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "New Multicolumn",
      "category": "Custom",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "Born in Europe",
            "description": "Made in Nijmegen, the Netherlands — where precision grooming meets European craftsmanship..."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "LEAPING BUNNY CERTIFIED",
            "description": "We’re proudly certified by Leaping Bunny — guaranteeing none of our products are tested on animals..."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "FORMULATED WITH PURPOSE",
            "description": "Every formula is made with high-quality, skin-compatible ingredients for visible results..."
          }
        }
      ]
    }
  ]
}
{% endschema %}
