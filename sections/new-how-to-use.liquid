<style>
  #section-{{ section.id }} {
    padding-bottom: 0px;
  }
  #section-{{ section.id }} .single-row{
    background-color: {{ section.settings.bg_color }};
  }

  @media screen and (max-width: 1023px) {
    #section-{{ section.id }} {
      padding-top: 0px;
    }
    #section-{{ section.id }} .single-row {
      background-color: {{ section.settings.mobile_bg_color }};
    }
  }
</style>


<div class="how-to-use-wrap section-spacer" id="section-{{ section.id }}">
  <div class="single-row">
    <div class="row g-0 m-0 align-items-center gap-x-40">
      <div class="col-lg-6">
        <div class="htu-left-video">
          <div class="video-banner">
            {% if section.settings.video != blank %}
              {{
                section.settings.video
                | video_tag:
                  image_size: 'master',
                  autoplay: true,
                  loop: true,
                  muted: true,
                  controls: false,
                  class: 'ssbd__video'
              }}
            {% elsif section.settings.video_banner != blank %}
              <img src="{{ section.settings.video_banner | image_url: width: 1200 }}" alt="" width="auto" height="auto">
            {% else %}
              <placeholder-image data-block-id="{{ section.id }}-video-banner" data-type="product"></placeholder-image>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="large-space-right">
          <div class="htu-right-content">
            <p class="font-small uppercase">{{ section.settings.how_to_use_label }}</p>
            <h2 class="secondary-heading">
              {{ section.settings.how_to_use_heading }}
            </h2>
            <p>{{ section.settings.how_to_use_description }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "How To Use",
  "tag": "section",
  "class": "how-to-use-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "video_banner",
      "label": "Video Banner Image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Select Video"
    },
    {
      "type": "text",
      "id": "how_to_use_label",
      "label": "How to Use Label",
      "default": "HOW TO USE"
    },
    {
      "type": "text",
      "id": "how_to_use_heading",
      "label": "How to Use Heading",
      "default": "Apply a small bit on your finger. Put on problem areas like dark circles."
    },
    {
      "type": "textarea",
      "id": "how_to_use_description",
      "label": "How to Use Description",
      "default": "Timeless gift options including celebrated staples of skin, hand and body care..."
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#fbf9f5"
    },
    {
      "type": "color",
      "id": "mobile_bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "How To Use",
      "category": "Custom"
    }
  ]
}
{% endschema %}
