<div class="footer-area-wrap" id="{{ section.id }}">
  <div class="container-max">
    <div class="footer-area__grid">
      <!-- Newsletter Column -->
      <div class="footer-col footer-col__newsletter">
        <div class="footer-left-col">
          <h2 class="secondary-heading pb-3">{{ section.settings.newsletter_heading }}</h2>
          <p class="secondary-text">{{ section.settings.newsletter_description }}</p>
  
          <!-- Shopify Newsletter Form -->
          <div class="submit-email">
            {% form 'contact', class: 'single-input-fuild' %}
              <input
                type="email"
                name="contact[email]"
                placeholder="{{ 'blocks.contact_form.email' | t }}"
                required
              >
              <button type="submit">
                <svg width="13" height="12" viewBox="0 0 13 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M7.48275 3.34805L10.6667 6.51605L7.48275 9.70005H6.42675L9.30675 6.88405H2.66675V6.11605H9.30675L6.42675 3.30005H7.48275V3.34805Z" fill="#231C19"/>
                </svg>
              </button>
            {% endform %}
          </div>
  
          <p class="secondary-text">{{ section.settings.newsletter_disclaimer }} <a href="{{ section.settings.privacy_link }}">Terms & Privacy</a></p>
        </div>
      </div>

      <!-- Middle Column: Navigation Menu Blocks -->
      <div class="footer-col footer-col__menu">
        <div class="footer-links">
          {% for block in section.blocks %}
            {% if block.type == 'menu' and block.settings.menu != blank %}
              <ul role="list" {{ block.shopify_attributes }}>
                {% for link in linklists[block.settings.menu].links %}
                  <li>
                    <a class="link-hover" href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          {% endfor %}
        </div>
        <selector-root data-id=MH871807 id="MH871807"></selector-root>
      </div>

      <!-- Accordion Area -->
      <div class="footer-col footer-col__accordion">
        <div class="footer-acc-links">
          <div class="footer-links-acc">
            {% for block in section.blocks %}
              {% if block.type == 'accordion' %}
                <div class="accordion" {{ block.shopify_attributes }}>
                  <div class="accordion__intro">
                    <h4 class="accordion__title">{{ block.settings.heading }}</h4>
                    <span class="acc_arrow">
                      <svg width="12" height="6" viewBox="0 0 12 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6 0.500001L11.1962 5.75L0.803846 5.75L6 0.500001Z" fill="#231C19" />
                      </svg>
                    </span>
                  </div>
                  <div class="accordion__content">
                    <ul class="submenu">
                      {% for i in (1..6) %}
                        {% assign key = "link_text_" | append: i %}
                        {% assign url_key = "link_url_" | append: i %}
                        {% assign link_text = block.settings[key] %}
                        {% assign link_url = block.settings[url_key] %}
  
                        {% if link_text != blank %}
                          <li><a class="link-hover" href="{{ link_url }}">{{ link_text }}</a></li>
                        {% endif %}
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-inner">
        <p class="copyright-text">{{ section.settings.footer_copyright }}</p>
        {% if section.settings.footer_logo %}
          <div>
            <img src="{{ section.settings.footer_logo | image_url: width: 150 }}" alt="Footer Logo" width="auto" height="auto">
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

