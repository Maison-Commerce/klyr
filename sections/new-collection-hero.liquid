<style>
  #section-{{ section.id }} {
    position: relative;
  }
  #section-{{ section.id }} .home-header-media-wrapper {
    height: 640px;
  }
  #section-{{ section.id }} .home-header-media-wrapper img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>

<div class="header-hero-wrap collection-hero__banner" id="section-{{ section.id }}">
  <div class="home-header-media-wrapper">
    {% if collection.image %}
      <img src="{{ collection.image | image_url: width: 2000 }}" alt="{{ collection.title }}" width="auto" height="auto">
    {% elsif section.settings.fallback_image != blank %}
      <img src="{{ section.settings.fallback_image | image_url: width: 2000 }}" alt="{{ section.settings.fallback_image.alt | escape }}" width="auto" height="auto">
    {% endif %}
  </div>

  <div class="header-hero-content">
    <div class="container-max h-100">
      <div class="inner-content h-100">
        <div class="col-lg-5 h-100 d-flex align-items-center">
          <div class="header-hero-text">
            <h2 class="mt-auto">{{ collection.title }}</h2>

            {% if collection.description != blank %}
              <p class="collection-description">{{ collection.description }}</p>
            {% elsif section.settings.fallback_description != blank %}
              <p class="collection-description">{{ section.settings.fallback_description }}</p>
            {% endif %}

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "New Collection Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "fallback_image",
      "label": "Fallback Image",
      "info": "Used when collection image is not available"
    },
    {
      "type": "textarea",
      "id": "fallback_description",
      "label": "Fallback Description",
      "default": "Made with only the best materials we try to elevate the best yet unseen captive of this moment with. Made with only the best materials we try to elevate the best yet unseen captive of this moment with."
    }
  ],
  "presets": [
    {
      "name": "New Collection Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
