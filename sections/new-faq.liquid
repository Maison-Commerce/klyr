<!-- FAQ content-area -->
<section class="condition-content-wrap">
  <div class="container-max">
    <div class="row gap-y-48">
      <div class="col-lg-3 col-xl-4">
        <div class="condition-left-col">
          <h2>{{ section.settings.faq_heading }}</h2>
        </div>
      </div>
      <div class="col-lg-9 col-xl-8">
        <div class="condition-right-col">
          {% for block in section.blocks %}
            <div class="faw-single-rows{% unless forloop.first %} space-block-48 pb-0{% endunless %}{% if forloop.last %} {% endif %}" {{ block.shopify_attributes }}>
              <h2 class="secondary-heading">{{ block.settings.faq_category }}</h2>
              <div class="faq-main-col">
                <div class="product-main-faq">
                  {% for i in (1..10) %}
                    {% assign key = "faq_question_" | append: i %}
                    {% assign ans_key = "faq_answer_" | append: i %}
                    {% assign question = block.settings[key] %}
                    {% assign answer = block.settings[ans_key] %}
                    {% if question != blank or answer != blank %}
                      <div class="accordion">
                        <div class="accordion__intro{% if i == 1 %} pt-0{% endif %}">
                          <h4 class="font-base">{{ question }}</h4>
                          <span class="acc_arrow{% if i == 1 %} first-child-arrow{% endif %}">
                            <svg width="12" height="6" viewBox="0 0 12 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M6 0.5L11.1962 5.75H0.803846L6 0.5Z" fill="#231C19" />
                            </svg>
                          </span>
                        </div>
                        <div class="accordion__content">
                          <p>{{ answer }}</p>
                        </div>
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
<!-- FAQ content-area -->


