{% doc %}
  @prompt
    create a slider section with 4 columns in desktop, 2 columns in tab and 1 column in mobile. below the slider add a progress bar line that indicate the slider active position.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slider-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 20px 0;
  }

  .ai-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-slider-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease;
    gap: {{ block.settings.gap }}px;
  }

  .ai-slider-slide-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - (3 * {{ block.settings.gap }}px)) / 4);
    background-color: {{ block.settings.slide_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: 20px;
    text-align: center;
    border: 1px solid {{ block.settings.border_color }};
  }

  .ai-slider-slide-image-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    margin-bottom: 15px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-slider-slide-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-slider-slide-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-slider-slide-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.5;
  }

  .ai-slider-slide-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 10px;
  }

  .ai-slider-slide-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
    margin: 0;
  }

  .ai-slider-controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
  }

  .ai-slider-nav-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-slider-nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-slider-nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-slider-progress-container-{{ ai_gen_id }} {
    flex-grow: 1;
    margin: 0 20px;
  }

  .ai-slider-progress-track-{{ ai_gen_id }} {
    width: 100%;
    height: 4px;
    background-color: {{ block.settings.progress_background_color }};
    border-radius: 2px;
    position: relative;
    overflow: hidden;
  }

  .ai-slider-progress-bar-{{ ai_gen_id }} {
    height: 100%;
    background-color: {{ block.settings.progress_color }};
    border-radius: 2px;
    transition: width 0.3s ease;
    width: 0%;
  }

  @media screen and (max-width: 1024px) {
    .ai-slider-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.gap }}px) / 2);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-slider-slide-{{ ai_gen_id }} {
      flex: 0 0 100%;
    }

    .ai-slider-slide-image-{{ ai_gen_id }} {
      height: 150px;
    }

    .ai-slider-controls-{{ ai_gen_id }} {
      margin-top: 15px;
    }

    .ai-slider-progress-container-{{ ai_gen_id }} {
      margin: 0 15px;
    }
  }
{% endstyle %}

<slider-component-{{ ai_gen_id }} class="ai-slider-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-slider-wrapper-{{ ai_gen_id }}">
    <div class="ai-slider-track-{{ ai_gen_id }}">
      {% for i in (1..8) %}
        {% liquid
          assign slide_title_key = 'slide_' | append: i | append: '_title'
          assign slide_description_key = 'slide_' | append: i | append: '_description'
          assign slide_image_key = 'slide_' | append: i | append: '_image'
          
          assign slide_title = block.settings[slide_title_key]
          assign slide_description = block.settings[slide_description_key]
          assign slide_image = block.settings[slide_image_key]
        %}
        
        {% if slide_title != blank or slide_description != blank or slide_image != blank %}
          <div class="ai-slider-slide-{{ ai_gen_id }}">
            <div class="ai-slider-slide-image-{{ ai_gen_id }}">
              {% if slide_image %}
                <img
                  src="{{ slide_image | image_url: width: 400 }}"
                  alt="{{ slide_image.alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="200"
                >
              {% else %}
                <div class="ai-slider-slide-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            
            {% if slide_title != blank %}
              <h3 class="ai-slider-slide-title-{{ ai_gen_id }}">{{ slide_title }}</h3>
            {% endif %}
            
            {% if slide_description != blank %}
              <p class="ai-slider-slide-description-{{ ai_gen_id }}">{{ slide_description }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="ai-slider-controls-{{ ai_gen_id }}">
    <button class="ai-slider-nav-button-{{ ai_gen_id }} ai-slider-prev-{{ ai_gen_id }}" aria-label="Previous slide">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="15,18 9,12 15,6"></polyline>
      </svg>
    </button>

    <div class="ai-slider-progress-container-{{ ai_gen_id }}">
      <div class="ai-slider-progress-track-{{ ai_gen_id }}">
        <div class="ai-slider-progress-bar-{{ ai_gen_id }}"></div>
      </div>
    </div>

    <button class="ai-slider-nav-button-{{ ai_gen_id }} ai-slider-next-{{ ai_gen_id }}" aria-label="Next slide">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9,18 15,12 9,6"></polyline>
      </svg>
    </button>
  </div>
</slider-component-{{ ai_gen_id }}>

<script>
  (function() {
    class SliderComponent{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slidesPerView = 4;
        this.totalSlides = 0;
        this.maxSlides = 0;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-slider-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-slider-slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-slider-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-slider-next-{{ ai_gen_id }}');
        this.progressBar = this.querySelector('.ai-slider-progress-bar-{{ ai_gen_id }}');

        this.totalSlides = this.slides.length;
        this.updateSlidesPerView();
        this.updateMaxSlides();
        this.updateSlider();
        this.setupEventListeners();

        window.addEventListener('resize', () => {
          this.updateSlidesPerView();
          this.updateMaxSlides();
          this.updateSlider();
        });
      }

      updateSlidesPerView() {
        if (window.innerWidth <= 749) {
          this.slidesPerView = 1;
        } else if (window.innerWidth <= 1024) {
          this.slidesPerView = 2;
        } else {
          this.slidesPerView = 4;
        }
      }

      updateMaxSlides() {
        this.maxSlides = Math.max(0, this.totalSlides - this.slidesPerView);
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.prevSlide());
        this.nextButton.addEventListener('click', () => this.nextSlide());
      }

      prevSlide() {
        if (this.currentSlide > 0) {
          this.currentSlide--;
          this.updateSlider();
        }
      }

      nextSlide() {
        if (this.currentSlide < this.maxSlides) {
          this.currentSlide++;
          this.updateSlider();
        }
      }

      updateSlider() {
        if (this.totalSlides === 0) return;

        this.currentSlide = Math.max(0, Math.min(this.currentSlide, this.maxSlides));

        const slideWidth = 100 / this.slidesPerView;
        const translateX = -(this.currentSlide * slideWidth);
        this.track.style.transform = `translateX(${translateX}%)`;

        this.prevButton.disabled = this.currentSlide === 0;
        this.nextButton.disabled = this.currentSlide >= this.maxSlides;

        const progress = this.maxSlides > 0 ? (this.currentSlide / this.maxSlides) * 100 : 0;
        this.progressBar.style.width = `${progress}%`;
      }
    }

    customElements.define('slider-component-{{ ai_gen_id }}', SliderComponent{{ ai_gen_id }});
  })();
</script>

